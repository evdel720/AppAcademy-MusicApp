<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user.nil? %>
    <%= button_to "Login", new_session_url, method: :get %>
    <%= button_to "Join", new_user_url, method: :get %>
  <% else %>
    <p>Logged in as <%= current_user.username %>. Enjoy!</p>
    <%= button_to "Logout", session_url, method: :delete %>
  <% end %>

  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>

  <ul>
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    <% end %>
  </ul>

  <%= yield %>

</body>
</html>
