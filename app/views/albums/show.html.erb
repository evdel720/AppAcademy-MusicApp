<h2><%= @album.title %></h2>

<%= button_to 'Add new track', new_album_track_url(@album), method: :get %>
<%= button_to 'Edit this album', edit_album_url, method: :get %>
<%= button_to 'delete this album', album_url, method: :delete %>
<%= button_to 'Back to the band', band_url(@album.band_id), method: :get %>

<% if !@album.tracks.empty? %>
  <p>Tracks</p>
  <table>
    <tr>
      <th>
        Track Title
      </th>
      <th>
        Track Type
      </th>
    </tr>
    <% @album.tracks.each do |track| %>
      <tr>
        <td>
          <a href="<%=track_url(track)%>"> <%= track.title %></a>
        </td>
        <td>
          <%= track.track_type %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
